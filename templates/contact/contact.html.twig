{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1 tabindex="0">Contacter-Nous</h1>

    <form method="post" class="contactForm">
        <label for="Phone" class="phoneLabel" tabindex="0">Numéro de téléphone:</label>
        <input type="text" name="phone" id="Phone" class="phone" tabindex="0"/>
        <label for="mail" class="mailLabel" tabindex="0">E-Mail:</label>
        <input type="text" name="mail" id="mail" class="mail" tabindex="0"/>
        <label for="sujet" class="sujetLabel" tabindex="0">Sujet:</label>
        <input id="sujet" class="sujet" tabindex="0" />
        <label for="content" class="msgLabel" tabindex="0">Message:</label>
        <input name="content" id="content" class="content" tabindex="0"/>
        <button type="submit" title="envoyer votre message" class="submit" href="/" tabindex="0">Envoyer</button>
    </form>

{% endblock %}
